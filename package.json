{
  "name": "woonuxt",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --host",
    "dev:ssl": "NODE_TLS_REJECT_UNAUTHORIZED=0 nuxt dev --https --ssl-cert localhost.pem --ssl-key localhost-key.pem",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "serve": "nuxi generate && npx serve .output/public -l 8080",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "release": "npm run lint:fix && changelogen --release && git push --follow-tags",
    "openapi-ts": "openapi-ts",
    "format": "biome format --write ."
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss",
      "prettier-plugin-organize-attributes"
    ],
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@stripe/stripe-js": "^4.6.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.9",
    "@vueform/slider": "^2.1.10",
    "@vueuse/core": "^11.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwind-merge": "^2.5.3",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nuxt/fonts": "^0.9.2",
    "@nuxt/icon": "^1.5.2",
    "@nuxt/image": "1.8.1",
    "@nuxt/ui": "^2.18.6",
    "@nuxtjs/cloudinary": "^3.1.0",
    "@nuxtjs/i18n": "^8.5.5",
    "@nuxtjs/tailwindcss": "^6.12.1",
    "@tailwindcss/typography": "^0.5.15",
    "@vueuse/nuxt": "^11.1.0",
    "nuxt": "^3.13.2",
    "nuxt-graphql-client": "^0.2.36",
    "prettier": "^3.3.3",
    "woonuxt-settings": "^1.0.61"
  },
  "overrides": {
    "sharp": "0.32.6"
  }
}
